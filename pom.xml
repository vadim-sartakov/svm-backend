<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
    <modelVersion>4.0.0</modelVersion>
    <groupId>svm.backend</groupId>
    <artifactId>svm-backend-build</artifactId>
    <version>${revision}</version>
    <packaging>pom</packaging>
    <name>Backend</name>

    <parent>
        <groupId>org.springframework.boot</groupId>
        <artifactId>spring-boot-starter-parent</artifactId>
        <version>1.5.10.RELEASE</version>
        <relativePath/>
    </parent>

    <properties>
        <!-- Duplicate of parent's version definition. Can't use properties there. -->
        <spring-boot.version>1.5.10.RELEASE</spring-boot.version>
        <revision>1.0.0</revision>
        
        <project.build.sourceEncoding>UTF-8</project.build.sourceEncoding>
        <project.reporting.outputEncoding>UTF-8</project.reporting.outputEncoding>
        <java.version>1.8</java.version>
    </properties>

    <modules>
        <module>svm-backend-core</module>
        <module>svm-backend-parent</module>
        <module>svm-backend-data-project</module>
        <module>svm-backend-web-project</module>
        <module>svm-backend-security</module>
        <module>svm-backend-sms-project</module>
        <module>svm-backend-samples</module>
        <!--<module>svm-backend-sign-up</module>-->
    </modules>
    
    <dependencyManagement>
        <dependencies>
            
            <dependency>
                <groupId>svm.backend</groupId>
                <artifactId>svm-backend-core</artifactId>
                <version>1.0.0</version>
            </dependency>
            
            <!-- JPA -->
            <dependency>
                <groupId>svm.backend</groupId>
                <artifactId>svm-backend-data</artifactId>
                <version>1.0.0</version>
            </dependency>
            <dependency>
                <groupId>svm.backend</groupId>
                <artifactId>svm-backend-data-jpa</artifactId>
                <version>1.0.0</version>
            </dependency>
            <dependency>
                <groupId>svm.backend</groupId>
                <artifactId>svm-backend-data-jpa-security</artifactId>
                <version>1.0.0</version>
            </dependency>
            
            <!-- MongoDB -->
            <dependency>
                <groupId>svm.backend</groupId>
                <artifactId>svm-backend-data-mongodb</artifactId>
                <version>1.0.0</version>
            </dependency>
            
            <dependency>
                <groupId>svm.backend</groupId>
                <artifactId>svm-backend-sms</artifactId>
                <version>1.0.0</version>
            </dependency>
            <dependency>
                <groupId>svm.backend</groupId>
                <artifactId>svm-backend-web-core</artifactId>
                <version>1.0.0</version>
            </dependency>
            <dependency>
                <groupId>svm.backend</groupId>
                <artifactId>svm-backend-web</artifactId>
                <version>1.0.0</version>
            </dependency>
            <dependency>
                <groupId>svm.backend</groupId>
                <artifactId>svm-backend-security</artifactId>
                <version>1.0.0</version>
            </dependency>
            
        </dependencies>
    </dependencyManagement>
    
    <build>
        
        <pluginManagement>
            <plugins>

                <plugin>
                    <groupId>org.jacoco</groupId>
                    <artifactId>jacoco-maven-plugin</artifactId>
                    <version>0.8.1</version>
                    <executions>
                        <execution>
                            <goals>
                                <goal>prepare-agent</goal>
                            </goals>
                        </execution>
                        <execution>
                            <id>report</id>
                            <phase>post-integration-test</phase>
                            <goals>
                                <goal>report</goal>
                            </goals>
                        </execution>
                    </executions>
                    <configuration>
                        <propertyName>jacocoArgline</propertyName>
                    </configuration>
                </plugin>

                <plugin>
                    <groupId>org.apache.maven.plugins</groupId>
                    <artifactId>maven-surefire-plugin</artifactId>
                    <configuration>
                        <argLine>${jacocoArgline}</argLine>
                    </configuration>
                </plugin>

                <plugin>
                    <groupId>org.apache.maven.plugins</groupId>
                    <artifactId>maven-failsafe-plugin</artifactId>
                    <configuration>
                        <argLine>${jacocoArgline}</argLine>
                    </configuration>
                </plugin>

                <plugin>
                    <groupId>org.codehaus.mojo</groupId>
                    <artifactId>flatten-maven-plugin</artifactId>
                    <version>1.0.1</version>
                    <configuration>
                        <updatePomFile>true</updatePomFile>
                        <pomElements>
                            <parent>expand</parent>
                            <properties>keep</properties>
                            <dependencyManagement>keep</dependencyManagement>
                            <dependencies>keep</dependencies>
                            <build>keep</build>
                            <pluginManagement>keep</pluginManagement>
                        </pomElements>
                    </configuration>
                    <executions>
                        <execution>
                            <id>flatten</id>
                            <phase>process-resources</phase>
                            <goals>
                                <goal>flatten</goal>
                            </goals>
                        </execution>
                    </executions>
                </plugin>
                
                <!-- QueryDsl annotation processor placed here in root because it often used in
                    submodules tests -->
                <plugin>
                    <groupId>com.mysema.maven</groupId>
                    <artifactId>apt-maven-plugin</artifactId>
                    <version>1.1.3</version>
                    <executions>
                        <execution>
                            <id>process</id>
                            <goals>
                                <goal>process</goal>
                            </goals>
                            <configuration>
                                <outputDirectory>target/generated-sources/java</outputDirectory>
                                <processor>com.querydsl.apt.jpa.JPAAnnotationProcessor</processor>
                            </configuration>
                        </execution>
                        <execution>
                            <id>test-process</id>
                            <goals>
                                <goal>test-process</goal>
                            </goals>
                            <configuration>
                                <outputDirectory>target/generated-test-sources/java</outputDirectory>
                                <processor>com.querydsl.apt.jpa.JPAAnnotationProcessor</processor>
                            </configuration>
                        </execution>
                    </executions>
                </plugin>

            </plugins>
        </pluginManagement>
        
        <plugins>
            
            <!-- Enabling compile warnings -->
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-compiler-plugin</artifactId>
                <configuration>
                    <compilerArgs>
                        <arg>-Xlint:unchecked</arg>
                    </compilerArgs>
                </configuration>
            </plugin>
            
            <!-- Expanding parent version in children poms -->
            <plugin>
                <groupId>org.codehaus.mojo</groupId>
                <artifactId>flatten-maven-plugin</artifactId>
            </plugin>
            <plugin>
                <groupId>org.jacoco</groupId>
                <artifactId>jacoco-maven-plugin</artifactId>
            </plugin>
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-failsafe-plugin</artifactId>
            </plugin>
            
        </plugins>
        
    </build>
            
</project>
