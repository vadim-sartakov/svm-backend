            <column autoIncrement="true" name="id" type="bigint">
                <constraints primaryKey="true" primaryKeyName="temporal_passwordsPK"/>
            </column>
            <column name="attempts" type="int">
                <constraints nullable="false"/>
            </column>
            <column name="created_at" type="datetime2(7)">
                <constraints nullable="false"/>
            </column>
            <column name="expires_at" type="datetime2(7)">
                <constraints nullable="false"/>
            </column>
            <column name="password" type="varchar(255)">
                <constraints nullable="false"/>
            </column>
            <column name="user_account_id" type="varchar(255)">
                <constraints nullable="false"/>
            </column>
        </createTable>
        <addUniqueConstraint columnNames="user_account_id" constraintName="UK_q8vos4jc100qvjidbv1d6vi1h" tableName="temporal_passwords"/>
        
        <createTable tableName="users">
            <column name="id" type="binary(16)">
                <constraints nullable="false"/>
            </column>
            <column name="blocked_till" type="datetime2(7)"/>
            <column name="created_at" type="datetime2(7)">
                <constraints nullable="false"/>
            </column>
            <column name="disabled" type="bit">
                <constraints nullable="false"/>
            </column>
            <column name="expires_at" type="datetime2(7)"/>
            <column name="password" type="varchar(150)">
                <constraints nullable="false"/>
            </column>
            <column name="username" type="varchar(255)">
                <constraints nullable="false"/>
            </column>
        </createTable>
        <addPrimaryKey columnNames="id" constraintName="usersPK" tableName="users"/>
        <addUniqueConstraint columnNames="username" constraintName="UC_USERSNAME_COL" tableName="users"/>       
        
        <addForeignKeyConstraint baseColumnNames="user_id" baseTableName="user_accounts" constraintName="FKbxl6anxo14q097g8cd2e51v55" deferrable="false" initiallyDeferred="false" referencedColumnNames="id" referencedTableName="users"/>
