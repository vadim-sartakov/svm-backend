        <createTable tableName="user_roles">
            <column name="id" type="binary(16)">
                <constraints nullable="false"/>
            </column>
            <column name="role_id" type="varchar(100)">
                <constraints nullable="false"/>
            </column>
            <column name="user_id" type="binary(16)">
                <constraints nullable="false"/>
            </column>
        </createTable>
        <addPrimaryKey columnNames="id" constraintName="user_rolesPK" tableName="user_roles"/>
        <addUniqueConstraint columnNames="role_id, user_id" constraintName="UKa9dydk3dj4qb8cvmjijqnrg5t" tableName="user_roles"/>
        
